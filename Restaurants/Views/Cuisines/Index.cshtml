@{
  Layout = "_Layout";
}

@using Restaurants.Models

<h1>Types of cuisines</h1>

@if (Model.Count == 0)
{
  <p>No cuisine types have been added yet.</p>
}

<ul>
@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Name}", "Details", new { id = cuisine.CuisineId })</li>
}
</ul>

<p>@Html.ActionLink("Add a cuisine type", "Create", "Cuisines")</p>
<p>@Html.ActionLink("Return to home", "Index", "Home")</p>