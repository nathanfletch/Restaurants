@{
  Layout = "_Layout";
}

@model Restaurants.Models.Restaurant

<h3>Add a new restaurant</h3>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Dishes)
  @Html.TextBoxFor(model => model.Dishes)

  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)

  @Html.LabelFor(model => model.Reservations)
  @Html.CheckBoxFor(model => model.Reservations)

  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")

  <input type="submit" value="Add new restaurant" />
}

<p>@Html.ActionLink("Show all restaurants", "Index")</p>